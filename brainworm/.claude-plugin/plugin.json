{
  "name": "brainworm",
  "version": "1.0.0",
  "description": "DAIC workflow enforcement and multi-project analytics for Claude Code",
  "author": {
    "name": "Brainworm Project",
    "email": "brainworm@logansmith.dev"
  },
  "homepage": "https://github.com/logansmith/brainworm",
  "repository": "https://github.com/logansmith/brainworm",
  "license": "MIT",
  "keywords": ["daic", "workflow", "analytics", "productivity", "hooks"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": {"tools": ["Bash", "Edit", "Write", "MultiEdit"]},
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/pre_tool_use.py --analytics --verbose"
        }]
      },
      {
        "matcher": {"tools": ["Task"]},
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/transcript_processor.py --analytics --verbose"
        }]
      }
    ],
    "PostToolUse": [
      {
        "matcher": {"tools": ["Edit", "Write", "MultiEdit", "Bash", "Task"]},
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/post_tool_use.py --analytics --verbose"
        }]
      }
    ],
    "SessionStart": [
      {
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/session_start.py --context --verbose --analytics"
        }]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/session_end.py --verbose --analytics"
        }]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/user_prompt_submit.py --analytics --verbose"
        }]
      }
    ],
    "Stop": [
      {
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/stop.py --summary --analytics"
        }]
      }
    ],
    "Notification": [
      {
        "hooks": [{
          "type": "command",
          "command": "uv run ./hooks/notification.py --feedback --analytics"
        }]
      }
    ]
  },
  "commands": {
    "daic": {
      "source": "./commands/daic.md",
      "description": "Control DAIC workflow mode"
    },
    "api-mode": {
      "source": "./commands/api-mode.md",
      "description": "Toggle API mode for automatic ultrathink"
    },
    "add-trigger": {
      "source": "./commands/add-trigger.md",
      "description": "Add a new trigger phrase for implementation mode"
    },
    "install-brainworm": {
      "source": "./commands/install-brainworm.md",
      "description": "Set up brainworm in the current project"
    }
  },
  "agents": [
    "./agents/context-gathering.md",
    "./agents/context-refinement.md",
    "./agents/code-review.md",
    "./agents/logging.md",
    "./agents/service-documentation.md",
    "./agents/session-docs.md",
    "./agents/data-analyst.md",
    "./agents/meta-agent.md",
    "./agents/claude-hooks-developer.md"
  ]
}
